<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win.cmrfacultyfeedback.Section">

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/a"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:id="@+id/a_btn"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/b"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:id="@+id/b_btn"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/a_btn"
        android:layout_alignLeft="@+id/a_btn"
        android:layout_alignStart="@+id/a_btn" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/c"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:id="@+id/c_btn"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/b_btn"
        android:layout_alignLeft="@+id/b_btn"
        android:layout_alignStart="@+id/b_btn" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/d"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:id="@+id/d_btn"
        android:layout_below="@+id/c_btn"
        android:layout_alignLeft="@+id/a_btn"
        android:layout_alignStart="@+id/a_btn"
        android:layout_marginTop="23dp" />

</RelativeLayout>
