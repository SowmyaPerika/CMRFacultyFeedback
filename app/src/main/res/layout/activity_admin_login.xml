<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win.cmrfacultyfeedback.AdminLoginActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/madmin_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_marginBottom="75dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/admin_id"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="75dp"
            android:hint="@string/id"
            android:inputType="textPassword"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="75dp" />
    </android.support.design.widget.TextInputLayout>

    <!--<EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/adminid"
        android:layout_alignLeft="@+id/adminid" />
-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show"
        android:background="@color/colorAccent"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin_id"
        android:id="@+id/adminid"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp" />
</RelativeLayout>
